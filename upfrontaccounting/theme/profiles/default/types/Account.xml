<?xml version="1.0"?>
<object name="Account"
        meta_type="Factory-based Type Information with dynamic views"
        xmlns:i18n="http://xml.zope.org/namespaces/i18n"
        i18n:domain="plone">
   
 <property name="title" i18n:translate="">Account</property>
 <property name="description" i18n:translate=""></property>
 <property name="content_icon">Account.gif</property>
 <property name="content_meta_type">Account</property>
 <property name="product">UpfrontAccounting</property>
 <property name="factory">addAccount</property>
 <property name="immediate_view">base_view</property>
 <property name="global_allow">False</property>
 <property name="filter_content_types">True</property>
 <property name="allowed_content_types">
   <element value="Account"/>
 </property>
 <property name="allow_discussion">False</property>
 <property name="default_view">account_transactions</property>
 <property name="view_methods">
  <element value="account_transactions"/>
  <element value="folder_summary_view"/>
  <element value="folder_tabular_view"/>
  <element value="atct_album_view"/>
  <element value="folder_listing"/>
  <element value="base_view"/>
 </property>
 <property name="default_view_fallback">False</property>
 <alias from="(Default)" to="(dynamic view)"/>
 <alias from="view" to="(selected layout)"/>
 <alias from="edit" to="base_edit"/>
 <alias from="sharing" to="@@sharing"/>
 <action title="Transactions" 
         action_id="view"
         category="object" 
         condition_expr=""
         url_expr="string:${object_url}/account_transactions" 
         visible="True">
  <permission value="View"/>
 </action>
 <action title="Sub Accounts" 
         i18n:attributes="title"
         action_id="subaccounts"
         category="object" 
         condition_expr="python:1"
         url_expr="string:${object_url}/listaccountsview" 
         visible="True">
  <permission value="View"/>
 </action>
 <action title="Edit" 
         action_id="edit"
         category="object" 
         condition_expr="not:object/@@plone_lock_info/is_locked_for_current_user"
         url_expr="string:${object_url}/edit" 
         visible="True">
  <permission value="Modify portal content"/>
 </action>
 <action title="metadata" 
         i18n:attributes="title"
         action_id="metadata"
         category="object" 
         condition_expr="python:1"
         url_expr="string:${object_url}/metadata" 
         visible="False">
  <permission value="View"/>
 </action>
 <action title="Statement" 
         i18n:attributes="title"
         action_id="account_pdf"
         category="document_actions" 
         condition_expr="python:here.meta_type=='Account'"
         url_expr="string:${object_url}/statement_pdf" 
         visible="True">
  <permission value="View"/>
 </action>
</object>
